             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="http://helix-toolkit.org/wpf"
             xmlns:viewModels="clr-namespace:Viewer.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance viewModels:Display3DViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 3D Model Viewport -->
        <h:HelixViewport3D Grid.Row="0"
                           CameraMode="Inspect"
                           ShowCameraTarget="True"
                           ShowCameraInfo="True">
            <h:DefaultLights/>
            <h:PointsVisual3D
                Points="{Binding Points, Mode=OneWay}"
                Color="Violet"
                Size="6"/>
            <h:HelixViewport3D.Camera>
                <PerspectiveCamera
                    FieldOfView="60"
                    Position="{Binding CameraPosition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    LookDirection="{Binding CameraLookDirection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </h:HelixViewport3D.Camera>
        </h:HelixViewport3D>
